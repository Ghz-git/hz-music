/* components/videoItem/index.wxss */
.video-item {
  width: 100%;
  margin-bottom: 18rpx;
}
.img {
  width: 100%;
  border-radius: 12rpx;
}
.item-top {
  position: relative;
}
.detail {
  width: calc(100% - 30rpx);
  padding: 0 12rpx;
  position: absolute;
  bottom: 12rpx;
  font-size: 24rpx;
  color: white;
  display: flex;
  justify-content: space-between;
}
.item-bottom {
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}