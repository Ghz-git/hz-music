/* components/song-menu/index.wxss */
.song-menu {
  display: inline-block;
  vertical-align: top;
  width: calc((100% - 100rpx) / 3);
  margin-left: 20rpx;
}
/* .song-menu:last-of-type {
  margin-right: 20rpx;
} */
.song-menu__top .img {
  width: 100%;
  border-radius: 12rpx;
}
.txt {
  font-size: 26rpx;
  white-space: normal;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}